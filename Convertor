cm = float(input("Alors: "))

if cm == 1:
    ca = int(input("combien de cm: "))
    cb = ca / 100
    print(cb, "m")

elif cm == 2:
    cc = float(input("combien de ml: "))
    cd = cc / 1000
    print(cd, "l")
elif cm == 3:
    ce = int(input("combien de g: "))
    cf = int(input("combien de l: "))
    cg = ce / cf
    print(cg, "g/L")
elif cm == 4:
    ch = float(input("combien de cm3: "))
    ci = ch / 1000
    print(ci, "L")
elif cm == 5:
    cj = int(input("volume mere: "))
    ck = int(input("volume fille: "))
    cl = cj / ck
    print("concentration masse:", cl)
elif cm == 6:
    cn = float(input("combien de km: "))
    co = cn/1.6
    print(co, "miles")
elif cm == 7:
    cn = float(input("combien de cm: "))
    co = cn*0.39370079
    print(co, "inches")
elif cm == 8:
    cz = random.randint(1, 100)

    cy = input("Salam,Ton prenom khoya?")
    cx = 0
    print('okay! ' + cy + ' jpense a un nombre:')

    while cx < 10:
        guess = int(input())
        cx += 1
        caa = 10-cx
        if guess < cz:
            print('Un schwiya plus...')
            print("plus que",caa,"essais...")
        elif guess > cz:
            print('Un schwiya moins...')
            print("plus que", caa, "essais")
        if guess == cz:
            break
    if guess == cz and cx==1:
      print("Mektoub...")
    elif guess == cz :
        print('Mebrouk mon frero en ' + str(cx) + ' coups!')
    else:
        print('Ta pas trouver, petit cheetan vas ' + str(cz))
