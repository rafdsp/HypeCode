from math import *
import random
list = ['Aire d une sphère : A =  4 pi r2''Aire d un  disque : A  =  pi r2 ''Volume d une pyramide : V = ( A x h) /3''Aire d un carré est coté*coté','Aire d un triangle est b*h/2','( a+ b )2 = a2 +2ab + b2','( a - b )2 = a2 - 2ab + b2','( a + b) ( a - b) = a2 - b2','pi egale 3,141592']
cliste = random.choice(list)
print("Choisi une des taches:")
print("1= Cm en m")
print("2= ML en L")
print("3= Masse volumique (g/L)")
print("4= Cm3 en L")
print("5= Concentration massique")
